<resources>

    <style name="Theme.Mtactionbar" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_mtactionbar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Mtactionbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Mtactionbar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Mtactionbar</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Mtactionbar</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Mtactionbar</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_mtactionbar</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_mtactionbar</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Mtactionbar</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Mtactionbar.Widget</item>

    </style>

    <style name="ActionBar.Solid.Mtactionbar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_mtactionbar</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_mtactionbar</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_mtactionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Mtactionbar</item>
    </style>

    <style name="ActionBar.Transparent.Mtactionbar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_mtactionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Mtactionbar</item>
    </style>

    <style name="PopupMenu.Mtactionbar" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mtactionbar</item>	
    </style>

    <style name="DropDownListView.Mtactionbar" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_mtactionbar</item>
    </style>

    <style name="ActionBarTabStyle.Mtactionbar" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_mtactionbar</item>
    </style>

    <style name="DropDownNav.Mtactionbar" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_mtactionbar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mtactionbar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_mtactionbar</item>
    </style>
    
    <style name="ProgressBar.Mtactionbar" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_mtactionbar</item>
    </style>
    
    <style name="ActionButton.CloseMode.Mtactionbar" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_mtactionbar</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Mtactionbar.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Mtactionbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Mtactionbar</item>
    </style>

</resources>